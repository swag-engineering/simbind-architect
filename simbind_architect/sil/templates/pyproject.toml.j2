[build-system]
requires = ["setuptools", "wheel"]

[project]
name = "{{ package_name }}"
version = "{{ model_version }}+sil"
description = "Python wrapper around '{{ model_name }}' Simulink model"
authors = [{name = "SWAG Engineering UG", email = "contact@swag-engineering.io"}]
license = {file = "LICENSE"}
readme = "README.md"
requires-python = ">=3.8"

[tool.setuptools.package-data]
"{{ package_name }}" = ["*.so"]

[tool.distutils.bdist_wheel]
plat-name = "linux_x86_64"
